{
  "exclude": [
    "node_modules",
    "bin",
    "build",
    "coverage",
    "tests",
    "*.js",
    "*.mjs",
    "*.ts"
  ],
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": false,
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
